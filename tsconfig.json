{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "./build",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "types": ["jest", "node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "**/*.test.tsx", "**/*.stories.tsx"]
}